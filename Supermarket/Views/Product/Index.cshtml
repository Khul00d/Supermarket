@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}



<div>


    <div class="container p-3">

        <div class="row pt-4">
            <div class="col-6">
                <h4 class="text-primary">Products View</h4>
            </div>

        </div>

        @* table for show items *@
        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <th>
                        Name
                    </th>
                    <th>
                        Expiry Date
                    </th>

                    <th>
                        price
                    </th>

                    <th>
                        quantity
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td scope="row" width="30%">
                            @item.name
                        </td>
                        <td scope="row" width="30%">
                            @item.Expiry_Date
                        </td>
                        <td width="30%">
                            @item.price
                        </td>
                        <td width="30%">
                            @item.quantity
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>



</div>


